{
  "manifest_version": 3,
  "name": "Clean URL - ลบ UTM & Tracking",
  "version": "1.2",
  "description": "ลบ UTM parameters และ tracking parameters จาก URL อัตโนมัติ",
  "permissions": [
    "storage",
    "tabs",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
